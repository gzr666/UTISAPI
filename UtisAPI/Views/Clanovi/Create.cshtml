@model  UtisAPI.Models.User

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>




<div class="container">

    @using (Html.BeginForm(new { @class="form-horizontal"}))
    {
        @Html.AntiForgeryToken()


        <h4>User</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">

            <label for="name">Name: </label>
            <br>
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Name)

        </div>

        <div class="form-group">

            <label for="name">Surname: </label><br>
            @Html.TextBoxFor(model => model.Surname, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Surname)

        </div>

        <div class="form-group">

            <label for="name">Datum: </label><br>
            @Html.TextBoxFor(model => model.DateJoined, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DateJoined, "Unesi datum")

        </div>

        <div class="form-group">

            <input type="submit" value="Create" class="btn btn-primary btn-lg btn-block" />

        </div>



    }

</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
